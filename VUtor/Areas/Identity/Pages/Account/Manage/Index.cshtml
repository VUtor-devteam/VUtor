@page
@using VUtor.Areas.Identity.Pages.Account.Manage;
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Username" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Name" />
                <label asp-for="Input.Name" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Surname" class="form-control" placeholder="Please edit your surname." />
                <label asp-for="Input.Surname" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <select asp-for="Input.CourseYear" id="courseYear" class="form-control" placeholder="Please edit your academic year .">
                    @foreach (var value in Enum.GetValues(typeof(CourseYear)))
                    {
                        <option value="@value">@value.ToString()</option>
                    }
                </select>
                <label asp-for="Input.CourseYear" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <select asp-for="Input.CourseName" id="courseName" class="form-control" placeholder="Please edit your course name.">
                    @foreach (var value in Enum.GetValues(typeof(CourseName)))
                    {
                        <option value="@value">@value.ToString()</option>
                    }
                </select>
                <label asp-for="Input.CourseName" class="form-label"></label>
            </div>
            <div class="edit_row_container">
                <div>
                    <label class="specifications">Select a subject(s) you wish to learn:</label>
                    <div class="form-floating">
                        <select asp-for="Input.TopicsToLearn" multiple id="topicsToLearn" class="form-control">
                            @foreach (var topic in Model.TopicList)
                            {
                                <option value="@topic.Id">@topic.Title</option>
                            }
                        </select>
                        <span asp-validation-for="Input.TopicsToLearn" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="edit_row_container">
                <div>
                    <label class="specifications">Select a subject(s) you wish to teach:</label>
                    <div class="form-floating">
                        <select asp-for="Input.TopicsToTeach" multiple id="topicsToTeach" class="form-control">
                            @foreach (var topic in Model.TopicList)
                            {
                                <option value="@topic.Id">@topic.Title</option>
                            }
                        </select>
                        <span asp-validation-for="Input.TopicsToTeach" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <script>
    $(document).ready(function() {
        try {
            $('#topicsToLearn').select2();
            $('#topicsToTeach').select2(); // Add this line
        } catch (error) {
            console.error(error);
        }
    });
    </script>

    <!-- Add a little bit of CSS to ensure that the Select2 dropdown fits within the Bootstrap form field -->
    <style>
    .select2 {
        width: 100% !important;
    }
    </style>
}